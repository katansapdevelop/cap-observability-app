{
  "name": "cap-template-app",
  "version": "1.0.1",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.8.1",
    "@sap-cloud-sdk/resilience": "^3.8.1",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3",
    "express": "^4",
    "helmet": "^7.1.0",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7.4.0"
  },
  "scripts": {
    "start": "cds-serve",
    "debug": "cds watch",
    "debug-hybrid": "cds watch --profile hybrid"
  },
  "cds": {
    "requires": {
      "metrics": {
        "kind": "odata",
        "model": "srv/metrics-service",
        "service": "logicalstar.srv.BookMetricsService",
        "[production]": {
          "credentials": {
            "destination":"cap-template-app-destination",
            "path":"/bookMetrics",
            "forwardAuthToken": true
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "destinations": true
    },
    "features": {
      "kibana_formatter": true
    }
  }
}
